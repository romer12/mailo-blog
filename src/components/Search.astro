---
// 搜索组件 - 使用 Fuse.js 实现模糊搜索
---

<div class="search-modal" id="searchModal">
  <div class="search-backdrop" id="searchBackdrop"></div>
  <div class="search-container">
    <div class="search-header">
      <div class="search-input-wrapper">
        <i class="fas fa-search search-icon"></i>
        <input
          type="text"
          class="search-input"
          id="searchInput"
          placeholder="搜索文章标题、描述、标签..."
          autocomplete="off"
        />
        <button class="search-clear" id="searchClear" aria-label="清除">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <button class="search-close" id="searchClose" aria-label="关闭搜索">
        <i class="fas fa-times"></i>
      </button>
    </div>
    
    <div class="search-results" id="searchResults">
      <div class="search-empty">
        <i class="fas fa-search"></i>
        <p>输入关键词开始搜索</p>
      </div>
    </div>
  </div>
</div>

<style lang="scss" is:global>
  @use '../styles/variables.scss' as *;

  .search-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9999;
    display: none;
    opacity: 0;
    transition: opacity 0.3s ease;

    &.active {
      display: block;
      opacity: 1;
    }
  }

  .search-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
  }

  .search-container {
    position: relative;
    max-width: 700px;
    margin: 5vh auto 0;
    background: var(--card-bg);
    border-radius: $radius-lg;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    overflow: hidden;
    animation: slideDown 0.3s ease;
  }

  @keyframes slideDown {
    from {
      transform: translateY(-50px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .search-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    border-bottom: 1px solid var(--border-color);
  }

  .search-input-wrapper {
    flex: 1;
    display: flex;
    align-items: center;
    gap: $font-xs;
    padding: $font-xs 1rem;
    background: var(--hover-bg);
    border-radius: $radius-md;
    border: 2px solid transparent;
    transition: all 0.3s ease;

    &:focus-within {
      border-color: $primary;
      background: var(--card-bg);
    }

    .search-icon {
      color: var(--text-secondary);
      font-size: 1.1rem;
    }

    .search-input {
      flex: 1;
      border: none;
      background: transparent;
      color: var(--text-primary);
      font-size: 1rem;
      outline: none;

      &::placeholder {
        color: var(--text-secondary);
      }
    }

    .search-clear {
      display: none;
      width: 24px;
      height: 24px;
      border-radius: 50%;
      border: none;
      background: var(--hover-bg);
      color: var(--text-secondary);
      cursor: pointer;
      transition: all 0.3s ease;

      &:hover {
        background: $primary;
        color: white;
      }

      &.active {
        display: flex;
        align-items: center;
        justify-content: center;
      }
    }
  }

  .search-close {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: none;
    background: var(--hover-bg);
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;

    &:hover {
      background: $primary;
      color: white;
      transform: rotate(90deg);
    }
  }

  .search-results {
    max-height: 60vh;
    overflow-y: auto;
    padding: 1rem;

    &::-webkit-scrollbar {
      width: 6px;
    }

    &::-webkit-scrollbar-thumb {
      background: rgba($primary, 0.3);
      border-radius: 3px;

      &:hover {
        background: rgba($primary, 0.5);
      }
    }
  }

  .search-empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem 1rem;
    color: var(--text-secondary);

    i {
      font-size: 3rem;
      margin-bottom: 1rem;
      opacity: 0.3;
    }

    p {
      margin: 0;
      font-size: 0.9rem;
    }
  }

  .search-result-item {
    display: block;
    padding: 1rem;
    border-radius: $radius-md;
    text-decoration: none;
    color: var(--text-primary);
    transition: all 0.3s ease;
    border: 1px solid #dedede;
    margin-bottom: 0.5rem;

    &:hover {
      background: var(--hover-bg);
      border-color: $primary;
    }

    .result-title {
      font-size: 1rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: var(--text-primary);

      mark {
        background: rgba($primary, 0.2);
        color: $primary;
        padding: 0 0.25rem;
        border-radius: 2px;
      }
    }

    .result-description {
      font-size: 0.875rem;
      color: var(--text-secondary);
      line-height: 1.5;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      margin-bottom: 0.5rem;
    }

    .result-meta {
      display: flex;
      align-items: center;
      gap: 1rem;
      font-size: $font-xs;
      color: var(--text-secondary);

      .result-date {
        display: flex;
        align-items: center;
        gap: 0.25rem;
      }

      .result-tags {
        display: flex;
        gap: 0.25rem;
        flex-wrap: wrap;

        .tag {
          padding: 0.125rem 0.5rem;
          background: var(--hover-bg);
          border-radius: $radius-sm;
        }
      }
    }
  }

  .search-no-results {
    text-align: center;
    padding: 3rem 1rem;
    color: var(--text-secondary);

    i {
      font-size: 3rem;
      margin-bottom: 1rem;
      opacity: 0.3;
    }

    p {
      margin: 0;
      font-size: 0.9rem;
    }
  }

  @media (max-width: 768px) {
    .search-container {
      margin: 2vh 1rem 0;
      max-width: none;
    }

    .search-header {
      padding: 1rem;
    }

    .search-input-wrapper {
      .search-input {
        font-size: 0.9rem;
      }
    }

    .search-results {
      max-height: 70vh;
    }
  }
</style>

<script>
  import Fuse from 'fuse.js';

  interface SearchPost {
    slug: string;
    title: string;
    description: string;
    publishDate: string;
    category: string;
    tags: string[];
  }

  let fuse: Fuse<SearchPost> | null = null;
  let posts: SearchPost[] = [];

  // 初始化搜索数据
  async function initSearch() {
    try {
      const response = await fetch('/search.json');
      posts = await response.json();
      
      fuse = new Fuse(posts, {
        keys: [
          { name: 'title', weight: 0.7 },
          { name: 'description', weight: 0.2 },
          { name: 'tags', weight: 0.1 }
        ],
        threshold: 0.3,
        includeScore: true,
        includeMatches: true
      });
    } catch (error) {
      console.error('Failed to load search data:', error);
    }
  }

  // 打开搜索弹层
  function openSearch() {
    const modal = document.getElementById('searchModal');
    const input = document.getElementById('searchInput') as HTMLInputElement;
    
    if (modal) {
      modal.classList.add('active');
      document.body.style.overflow = 'hidden';
      setTimeout(() => input?.focus(), 100);
      
      if (!fuse) {
        initSearch();
      }
    }
  }

  // 关闭搜索弹层
  function closeSearch() {
    const modal = document.getElementById('searchModal');
    const input = document.getElementById('searchInput') as HTMLInputElement;
    
    if (modal) {
      modal.classList.remove('active');
      document.body.style.overflow = '';
      if (input) input.value = '';
      renderResults([]);
    }
  }

  // 渲染搜索结果
  function renderResults(results: any[]) {
    const container = document.getElementById('searchResults');
    if (!container) return;

    if (results.length === 0) {
      const input = document.getElementById('searchInput') as HTMLInputElement;
      if (input && input.value.trim()) {
        container.innerHTML = `
          <div class="search-no-results">
            <i class="fas fa-search"></i>
            <p>未找到相关文章</p>
          </div>
        `;
      } else {
        container.innerHTML = `
          <div class="search-empty">
            <i class="fas fa-search"></i>
            <p>输入关键词开始搜索</p>
          </div>
        `;
      }
      return;
    }

    container.innerHTML = results.map(result => {
      const post = result.item;
      const date = new Date(post.publishDate).toLocaleDateString('zh-CN');
      
      return `
        <a href="/blog/${post.slug}" class="search-result-item">
          <div class="result-title">${post.title}</div>
          <div class="result-description">${post.description || ''}</div>
          <div class="result-meta">
            <span class="result-date">
              <i class="fas fa-calendar"></i>
              ${date}
            </span>
            ${post.tags && post.tags.length > 0 ? `
              <div class="result-tags">
                ${post.tags.slice(0, 3).map((tag: string) => `<span class="tag">${tag}</span>`).join('')}
              </div>
            ` : ''}
          </div>
        </a>
      `;
    }).join('');
  }

  // 执行搜索
  function performSearch(query: string) {
    if (!fuse || !query.trim()) {
      renderResults([]);
      return;
    }

    const results = fuse.search(query);
    renderResults(results.slice(0, 10)); // 只显示前10个结果
  }

  // 初始化事件监听
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('searchModal');
    const backdrop = document.getElementById('searchBackdrop');
    const closeBtn = document.getElementById('searchClose');
    const input = document.getElementById('searchInput') as HTMLInputElement;
    const clearBtn = document.getElementById('searchClear');

    // 全局搜索快捷键 (Ctrl/Cmd + K)
    document.addEventListener('keydown', (e) => {
      if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
        e.preventDefault();
        openSearch();
      }
      
      // ESC 关闭
      if (e.key === 'Escape' && modal?.classList.contains('active')) {
        closeSearch();
      }
    });

    // 点击背景关闭
    backdrop?.addEventListener('click', closeSearch);
    closeBtn?.addEventListener('click', closeSearch);

    // 搜索输入
    input?.addEventListener('input', (e) => {
      const query = (e.target as HTMLInputElement).value;
      performSearch(query);
      
      // 显示/隐藏清除按钮
      if (clearBtn) {
        if (query) {
          clearBtn.classList.add('active');
        } else {
          clearBtn.classList.remove('active');
        }
      }
    });

    // 清除按钮
    clearBtn?.addEventListener('click', () => {
      if (input) {
        input.value = '';
        input.focus();
        performSearch('');
        clearBtn.classList.remove('active');
      }
    });

    // 暴露全局函数供 Header 调用
    (window as any).openSearch = openSearch;
  });
</script>
