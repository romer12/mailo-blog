---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

interface FriendLink {
    name: string
    url: string
    avatar?: string
    description?: string
}

// 静态友链数据
const friends: FriendLink[] = [
  // {
  //   name: '示例友链 1',
  //   url: 'https://example.com',
  //   avatar: 'https://ui-avatars.com/api/?name=Friend1&background=6366f1&color=fff&size=64',
  //   description: '这是一个示例友链描述'
  // },
];

// 获取所有博客文章用于生成分类和标签
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// 获取分类和标签
const categories = [...new Set(allPosts.map(post => post.data.category).filter(Boolean))];
const allTags = allPosts.flatMap(post => post.data.tags);
const tags = [...new Set(allTags)];
---

<Layout 
  title="友情链接 - 止于秋水 博客"
  description="我的朋友们"
  showSidebar={true}
  categories={categories}
  tags={tags}
>
  <div class="friends-page">
    <h1 class="page-title">友情链接</h1>
    
    {friends.length === 0 ? (
      <div class="empty-state">
        <p>暂无友链</p>
      </div>
    ) : (
      <div class="friends-grid">
        {friends.length && friends.map(friend => (
          <a 
            href={friend.url} 
            target="_blank" 
            rel="noopener noreferrer"
            class="friend-card"
          >
            <div class="friend-avatar">
              {friend.avatar ? (
                <img src={friend.avatar} alt={friend.name} />
              ) : (
                <div class="avatar-placeholder">
                  <i class="fas fa-user"></i>
                </div>
              )}
            </div>
            <div class="friend-info">
              <h3 class="friend-name">{friend.name}</h3>
              {friend.description && (
                <p class="friend-description">{friend.description}</p>
              )}
            </div>
            <div class="friend-link-icon">
              <i class="fa-solid fa-arrow-right"></i>
            </div>
          </a>
        ))}
      </div>
    )}
  </div>
</Layout>

<style lang="scss">
  @use '../styles/variables.scss' as *;
  
  .friends-page {
    min-height: 400px;
    background: var(--bg-card);
    border-radius: $radius-lg;
    padding: $spacing-2xl;
    box-shadow: var(--shadow-sm);
    
    @include mobile {
      padding: $spacing-lg;
      border-radius: 0;
    }
  }
  
  .page-title {
    font-size: $font-3xl;
    font-weight: 700;
    margin-bottom: $spacing-md;
    color: var(--text-primary);
    text-align: center;
    position: relative;
    padding-bottom: $spacing-md;
    
    &::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 60px;
      height: 3px;
      background: linear-gradient(90deg, $primary, #a855f7);
      border-radius: 2px;
    }
    
    @include mobile {
      font-size: $font-2xl;
    }
  }
  
  .page-description {
    text-align: center;
    color: var(--text-secondary);
    margin-bottom: $spacing-2xl;
    font-size: $font-base;
  }
  
  .friends-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: $spacing-lg;
    
    @media (min-width: 768px) and (max-width:1099px) {
      grid-template-columns: repeat(2, 1fr);
    }

    @media (min-width: 1100px) and (max-width:1199px) {
      grid-template-columns: repeat(2, 1fr);
    }
    
    @media (min-width:1200px) {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  .friend-card {
    display: flex;
    align-items: center;
    gap: $spacing-md;
    padding: $spacing-sm $spacing-md;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: $radius-lg;
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    
    &:hover {
      border-color: $primary;
      box-shadow: var(--shadow-hover);
      
      .friend-avatar {
        // transform: scale(1.1) rotate(5deg);
        transform: translateY(-2px);
        animation: iconFloat 1s ease-in-out infinite;
      }
      
      .friend-name {
        color: $primary;
      }
      
      .friend-link-icon {
        opacity: 1;
        transform: translate(0, 0);
      }
    }
  }
  
  .friend-avatar {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    overflow: hidden;
    background: linear-gradient(135deg, rgba($primary, 0.1), rgba(#a855f7, 0.1));
    display: flex;
    align-items: center;
    justify-content: center;
    
    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }
    
    .avatar-placeholder {
      font-size: 1.5rem;
      color: $primary;
    }
  }
  
  .friend-info {
    flex: 1;
    min-width: 0;
  }
  
  .friend-name {
    font-size: $font-sm;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: $spacing-xs;
    transition: color 0.3s ease;
    margin: 0;
  }
  
  .friend-description {
    font-size: $font-xs;
    color: var(--text-secondary);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin: 0;
  }
  
  .friend-link-icon {
    flex-shrink: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: $primary;
    opacity: 0;
    transform: translate(8px, 0);
    transition: all 0.3s ease;
    
    i {
      font-size: 1rem;
    }
  }
  
  .empty-state {
    text-align: center;
    padding: $spacing-2xl;
    color: var(--text-secondary);
    font-size: $font-lg;
    
    p {
      margin: 0;
    }
  }
  // 动画
  @keyframes iconFloat {
    0% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-3px);
    }
    100% {
      transform: translateY(0);
    }
  }
</style>
