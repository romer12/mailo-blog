      counter-reset: item;
      
      li {
        position: relative;
        padding-left: 1.5rem;
        margin-bottom: 0.5rem;
        counter-increment: item;
        
        &::before {
          content: counter(item) ".";
          position: absolute;
          left: 0;
          color: $primary;
          font-weight: 600;
