---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const blogEntries = await getCollection("blog", ({ data }) => {
    return data.draft !== true;
  });

  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();

// 格式化日期
const formatDate = (date: Date) => {
  return date.toLocaleDateString("zh-CN", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
};
---

<Layout
  title={`${entry.data.title} - 止于秋水`}
  description={entry.data.description || entry.data.title}
  showSidebar={false}
>
  <div class="article-page">
    <!-- 主内容区 -->
    <article class="article-detail">
      <!-- 文章头部 -->
      <header class="article-header">
        <h1 class="article-title">{entry.data.title}</h1>

        <div class="article-meta-wrapper">
          <div class="article-meta">
            <div class="meta-item author-info" style="display: none;">
              <img
                src="https://ui-avatars.com/api/?name=止于秋水&background=6366f1&color=fff&size=32"
                alt={entry.data.author}
                class="author-avatar"
              />
              <span class="author-name">{entry.data.author}</span>
            </div>

            <div class="meta-item meta-date">
              <i class="far fa-calendar"></i>
              <span>{formatDate(entry.data.publishDate)}</span>
            </div>

            {
              entry.data.updatedDate && (
                <div class="meta-item meta-updated">
                  <i class="far fa-clock" />
                  <span>更新于 {formatDate(entry.data.updatedDate)}</span>
                </div>
              )
            }

            {
              entry.data.category && (
                <a
                  href={`/categories/${entry.data.category}`}
                  class="meta-item meta-category"
                >
                  <i class="fas fa-folder" />
                  <span>{entry.data.category}</span>
                </a>
              )
            }
          </div>

          {
            entry.data.tags && entry.data.tags.length > 0 && (
              <div class="article-tags">
                {entry.data.tags.map((tag) => (
                  <a href={`/tags/${tag}`} class="tag">
                    <i class="fas fa-tag" />
                    {tag}
                  </a>
                ))}
              </div>
            )
          }
        </div>
      </header>

      <!-- 文章内容 -->
      <div class="article-content">
        <Content />
      </div>
    </article>

    <!-- 右侧目录 -->
    {
      headings.length > 0 && (
        <aside class="article-toc">
          <div class="toc-wrapper">
            <h3 class="toc-title">目录</h3>
            <nav class="toc-content" id="toc">
              <ul class="toc-list">
                {headings.map((heading) => {
                  // 去掉标题前的编号（如 "1. ", "1.1 ", "第一章 " 等）
                  const cleanText = heading.text.replace(
                    /^[\d\.]+\s+|^第[一二三四五六七八九十百千万]+[章节部分]\s+/g,
                    "",
                  );
                  return (
                    <li class={`toc-item toc-level-${heading.depth}`}>
                      <a href={`#${heading.slug}`} class="toc-link">
                        {cleanText}
                      </a>
                    </li>
                  );
                })}
              </ul>
            </nav>
          </div>
        </aside>
      )
    }

    <!-- 移动端目录悬浮按钮 -->
    {
      headings.length > 0 && (
        <button
          class="toc-float-btn"
          id="tocFloatBtn"
          aria-label="目录"
          title="目录"
        >
          <i class="fas fa-list" />
        </button>
      )
    }

    <!-- 移动端目录抽屉 -->
    {
      headings.length > 0 && (
        <div class="toc-drawer" id="tocDrawer">
          <div class="toc-drawer-overlay" id="tocDrawerOverlay" />
          <div class="toc-drawer-content">
            <div class="toc-drawer-header">
              <h3 class="toc-drawer-title">
                <i class="fas fa-list" />
                目录
              </h3>
              <button
                class="toc-drawer-close"
                id="tocDrawerClose"
                aria-label="关闭目录"
              >
                <i class="fas fa-times" />
              </button>
            </div>
            <nav class="toc-drawer-nav">
              <ul class="toc-drawer-list">
                {headings.map((heading) => {
                  const cleanText = heading.text.replace(
                    /^[\d\.]+\s+|^第[一二三四五六七八九十百千万]+[章节部分]\s+/g,
                    "",
                  );
                  return (
                    <li class={`toc-drawer-item toc-level-${heading.depth}`}>
                      <a href={`#${heading.slug}`} class="toc-drawer-link">
                        {cleanText}
                      </a>
                    </li>
                  );
                })}
              </ul>
            </nav>
          </div>
        </div>
      )
    }
  </div>
</Layout>

<script>
  // ============================================
  // 方案1: 使用 Shiki (已注释)
  // Astro 内置，在 astro.config.mjs 中配置
  // 如需启用，请在 astro.config.mjs 中配置 shikiConfig
  // ============================================

  // ============================================
  // 方案2: 使用 highlight.js (当前启用) ✅
  // ============================================

  import hljs from "highlight.js";

  function initHighlight() {
    const codeBlocks = document.querySelectorAll(".article-content pre code");
    codeBlocks.forEach((block) => {
      hljs.highlightElement(block as HTMLElement);
    });
  }

  // ============================================

  // 目录高亮和滚动监听
  function setupTOC() {
    const tocLinks = document.querySelectorAll(".toc-link, .toc-drawer-link");
    const headings = document.querySelectorAll(
      ".article-content h1, .article-content h2, .article-content h3, .article-content h4, .article-content h5, .article-content h6",
    );

    if (tocLinks.length === 0 || headings.length === 0) return;

    // 点击目录项平滑滚动
    tocLinks.forEach((link) => {
      link.addEventListener("click", (e) => {
        e.preventDefault();
        const targetId = link.getAttribute("href")?.substring(1);
        const target = document.getElementById(targetId || "");

        if (target) {
          const yOffset = -100;
          const y =
            target.getBoundingClientRect().top + window.pageYOffset + yOffset;
          window.scrollTo({ top: y, behavior: "smooth" });

          // 更新高亮
          tocLinks.forEach((l) => l.classList.remove("active"));
          link.classList.add("active");

          // 如果是抽屉中的链接，关闭抽屉
          if (link.classList.contains("toc-drawer-link")) {
            closeTocDrawer();
          }
        }
      });
    });

    // 滚动监听自动高亮
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const id = entry.target.id;

            // 同时更新侧边栏和抽屉中的高亮
            tocLinks.forEach((l) => l.classList.remove("active"));
            const allLinks = document.querySelectorAll(
              `.toc-link[href="#${id}"], .toc-drawer-link[href="#${id}"]`,
            );
            allLinks.forEach((l) => l.classList.add("active"));
          }
        });
      },
      {
        rootMargin: "-100px 0px -80% 0px",
      },
    );

    headings.forEach((heading) => observer.observe(heading));
  }

  // 目录抽屉功能
  function setupTocDrawer() {
    const tocFloatBtn = document.getElementById("tocFloatBtn");
    const tocDrawer = document.getElementById("tocDrawer");
    const tocDrawerOverlay = document.getElementById("tocDrawerOverlay");
    const tocDrawerClose = document.getElementById("tocDrawerClose");

    if (!tocFloatBtn || !tocDrawer) return;

    function openTocDrawer() {
      tocDrawer?.classList.add("active");
      document.body.style.overflow = "hidden";
    }

    function closeTocDrawer() {
      tocDrawer?.classList.remove("active");
      document.body.style.overflow = "";
    }

    // 全局函数，供点击事件使用
    (window as any).closeTocDrawer = closeTocDrawer;

    tocFloatBtn.addEventListener("click", openTocDrawer);
    tocDrawerClose?.addEventListener("click", closeTocDrawer);
    tocDrawerOverlay?.addEventListener("click", closeTocDrawer);
  }

  // 为所有代码块添加复制按钮
  function setupCopyButtons() {
    const preBlocks = document.querySelectorAll(".article-content pre");

    preBlocks.forEach((pre) => {
      // 避免重复添加
      if (pre.parentElement?.classList.contains("code-block-wrapper")) return;

      // 创建包装器
      const wrapper = document.createElement("div");
      wrapper.className = "code-block-wrapper";

      // 将 pre 包装起来
      pre.parentNode?.insertBefore(wrapper, pre);
      wrapper.appendChild(pre);

      // 创建复制按钮
      const copyButton = document.createElement("button");
      copyButton.className = "copy-button";
      copyButton.innerHTML = '<i class="fas fa-copy"></i><span>复制</span>';
      copyButton.setAttribute("aria-label", "复制代码");

      // 添加点击事件
      copyButton.addEventListener("click", async () => {
        const code = pre.querySelector("code");
        const text = code?.textContent || "";

        try {
          // 检查 Clipboard API 是否可用
          if (navigator.clipboard && window.isSecureContext) {
            // 使用现代 Clipboard API
            await navigator.clipboard.writeText(text);
          } else {
            // 降级方案：使用传统的 execCommand
            const textArea = document.createElement("textarea");
            textArea.value = text;
            textArea.style.position = "fixed";
            textArea.style.left = "-999999px";
            textArea.style.top = "-999999px";
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();

            try {
              document.execCommand("copy");
              textArea.remove();
            } catch (err) {
              console.error("降级复制方案失败:", err);
              textArea.remove();
              throw err;
            }
          }

          // 更改按钮状态
          copyButton.innerHTML =
            '<i class="fas fa-check"></i><span>已复制</span>';
          copyButton.classList.add("copied");

          // 2秒后恢复
          setTimeout(() => {
            copyButton.innerHTML =
              '<i class="fas fa-copy"></i><span>复制</span>';
            copyButton.classList.remove("copied");
          }, 2000);
        } catch (err) {
          console.error("复制失败:", err);
          copyButton.innerHTML =
            '<i class="fas fa-times"></i><span>失败</span>';

          setTimeout(() => {
            copyButton.innerHTML =
              '<i class="fas fa-copy"></i><span>复制</span>';
          }, 2000);
        }
      });

      wrapper.appendChild(copyButton);
    });
  }

  // 页面加载完成后执行
  document.addEventListener("DOMContentLoaded", () => {
    setupCopyButtons();
    setupTOC();
    setupTocDrawer();

    // 使用 highlight.js 进行代码高亮
    initHighlight();
  });
</script>

