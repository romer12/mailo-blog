---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// 获取所有博客文章
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

// 按发布日期排序
const sortedPosts = allPosts.sort((a, b) => 
  b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);

// 按年月分组
interface ArchiveGroup {
  year: string;
  month: string;
  count: number;
  articles: Array<{
    slug: string;
    title: string;
    published_at: string;
  }>;
}

const archiveMap = new Map<string, ArchiveGroup>();

sortedPosts.forEach(post => {
  const date = post.data.publishDate;
  const year = date.getFullYear().toString();
  const month = (date.getMonth() + 1).toString().padStart(2, '0');
  const key = `${year}-${month}`;
  
  if (!archiveMap.has(key)) {
    archiveMap.set(key, {
      year,
      month,
      count: 0,
      articles: []
    });
  }
  
  const group = archiveMap.get(key)!;
  group.count++;
  group.articles.push({
    slug: post.slug,
    title: post.data.title,
    published_at: date.toLocaleDateString('zh-CN', {
      month: 'long',
      day: 'numeric'
    })
  });
});

const archive = Array.from(archiveMap.values());

// 获取所有分类和标签
const categories = [...new Set(allPosts.map(post => post.data.category).filter(Boolean))];
const allTags = allPosts.flatMap(post => post.data.tags);
const tags = [...new Set(allTags)];

// 月份名称映射
const monthNames = ['一月', '二月', '三月', '四月', '五月', '六月', '七月', '八月', '九月', '十月', '十一月', '十二月'];
---

<Layout 
  title="归档 - 止于秋水"
  description="按时间浏览所有文章"
  showSidebar={true}
  categories={categories}
  tags={tags}
>
  <div class="archive-page">
    <h1 class="page-title">文章归档</h1>
    
    {archive.length === 0 ? (
      <div class="empty-state">
        <p>暂无归档</p>
      </div>
    ) : (
      <div class="archive-timeline">
        {archive.map(group => (
          <div class="archive-group">
            <div class="archive-header">
              <h2 class="archive-date">
                {group.year} 年 {monthNames[parseInt(group.month) - 1]}
              </h2>
              <span class="archive-count">{group.count} 篇</span>
            </div>
            
            <div class="archive-articles">
              {group.articles.map(article => (
                <a href={`/blog/${article.slug}`} class="archive-item">
                  <span class="article-date">{article.published_at}</span>
                  <span class="article-title">{article.title}</span>
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
    )}
  </div>
</Layout>

<style lang="scss">
  @use '../styles/variables.scss' as *;
  
  .archive-page {
    min-height: 400px;
    background: var(--bg-card);
    border-radius: $radius-lg;
    padding: $spacing-2xl;
    box-shadow: var(--shadow-sm);
    
